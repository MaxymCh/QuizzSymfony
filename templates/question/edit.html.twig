{% extends 'layouts/base-entite.html.twig' %}
{% block title %}Edit Question{% endblock %}
{% block body %}
    <h1>Edit Question</h1>
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Edit Question</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_question_index') }}"> 
                    View All Questions
                </a>
            </div>
            <div class="card-body">
                {% include 'question/_form.html.twig' with {'button_label': 'Update Question', 'button_color': 'btn-outline-success'}  %}
            </div>
            <div class="card-body">
                {% include 'question/_delete_form.html.twig' with {'button_label': 'Delete Question', 'button_color': 'btn-outline-success'}  %}
            </div>
        </div>
    </div>
{% endblock %}
