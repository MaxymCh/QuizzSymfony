{% extends 'layouts/base-entite.html.twig' %}
{% block title %}Répondre au questionnaire{% endblock %}

{% block body %}
    <h1>Répondre au questionnaire</h1>

    <form method="post">
            <h2>{{ question.getQuestiontext() }}</h2>

            {% if question.getQuestiontype() == "radio" %}
                {% for reponse in question.getReponses() %}
                    <div>
                        <input type="radio" name="{{ question.getQuestionid() }}" value="{{ reponse.getReponseid() }}">
                        <label>{{ reponse.getReponsetext() }}</label>
                    </div>
                {% endfor %}
            {% elseif question.getQuestiontype() == "checkbox" %}
                {% for reponse in question.getReponses() %}
                    <div>
                        <input type="checkbox" name="{{ question.getQuestionid() }}[]" value="{{ reponse.getReponseid() }}">
                        <label>{{ reponse.getReponsetext() }}</label>
                    </div>
                {% endfor %}
            {% elseif question.getQuestiontype() == "dropdown" %}
                <div>
                    <select name="{{ question.getQuestionid() }}[]" multiple>
                        {% for reponse in question.getReponses() %}
                            <option value="{{ reponse.getReponseid() }}">{{ reponse.getReponsetext() }}</option>
                        {% endfor %}
                    </select>
                </div>
            {% endif %}

            <hr>

        <button type="submit" name="action" value="precedent" {% if questionIndex == 0 %}disabled{% endif %}>Précédent</button>
        <button type="submit" name="action" value="suivant" {% if questionIndex == questions|length - 1 %}disabled{% endif %}>Suivant</button>
    </form>
{% endblock %}
